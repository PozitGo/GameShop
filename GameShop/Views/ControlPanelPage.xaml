<Page
    x:Class="GameShop.Views.ControlPanelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:viewmodels="using:GameShop.ViewModels"
    Style="{StaticResource PageStyle}"
    x:Name="PageRoot"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <muxc:TabView IsAddTabButtonVisible="False" CloseButtonOverlayMode="OnPointerOver">
            <muxc:TabViewItem Header="Панель управления" FontFamily="Cascadia Code SemiBold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                        <RowDefinition Height="7*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Padding="10" Text="Панель управления" FontSize="25" FontFamily="Cascadia Code SemiBold"/>
                    </StackPanel>
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8"></RowDefinition>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <CommandBar
                            Background="Transparent"
                            IsOpen="False"
                            HorizontalAlignment="Left"
                            DefaultLabelPosition="Right"
                            Grid.Row="0"
                            Grid.RowSpan="2">

                            <AppBarButton Icon="Add" Label="Добавить заказ" FontFamily="Cascadia Code SemiBold" Command="{x:Bind ViewModel.AppBarButtonAddOrder, Mode=OneWay}" CommandParameter="{x:Bind OrderSettingsTable, Mode=OneWay}"/>
                            <AppBarSeparator/>
                            <AppBarButton Icon="Edit" Label="Изменить заказ" FontFamily="Cascadia Code SemiBold" Command="{x:Bind ViewModel.AppBarButtonEditOrder, Mode=OneWay}" CommandParameter="{x:Bind OrderSettingsTable, Mode=OneWay}"/>
                            <AppBarSeparator/>
                            <AppBarButton Icon="Delete" Label="Удалить заказ" FontFamily="Cascadia Code SemiBold"/>
                            <AppBarSeparator/>
                            <AppBarButton Icon="Accept" Label="Одобрить заказ" FontFamily="Cascadia Code SemiBold"/>
                            <AppBarSeparator/>
                            <AppBarButton Icon="Clear" Label="Отклонить заказ" FontFamily="Cascadia Code SemiBold"/>
                            <AppBarSeparator/>
                            <AppBarButton Icon="Refresh" Label="Обновить заказы" FontFamily="Cascadia Code SemiBold"/>
                            <AppBarSeparator/>
                            <AppBarButton Icon="Clear" Label="Очистить таблицы" FontFamily="Cascadia Code SemiBold"/>
                        </CommandBar>

                        <Button Content="Настройки фильтрации" Grid.Row="1" Grid.Column="1"  VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Сбросить все фильтры"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutSubItem Text="Фильтрация без изменения коллекции">
                                        <MenuFlyoutItem Text="Отобразить активные заказы"/>
                                        <MenuFlyoutItem Text="По номеру чека"/>
                                        <MenuFlyoutItem Text="По сумме"/>
                                        <MenuFlyoutItem Text="Отобразить заказы по дате оформления чека"/>
                                        <MenuFlyoutItem Text="Отобразить заказы по имени покупателя"/>
                                        <MenuFlyoutItem Text="Найти чек по номеру заказа"/>
                                        <MenuFlyoutItem Text="Получить заказы по номеру чека"/>
                                    </MenuFlyoutSubItem>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>

                        <StackPanel Padding="10" VerticalAlignment="Top" Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="2" >
                            <StackPanel HorizontalAlignment="Left">
                                <muxc:RadioButtons FontFamily="Cascadia Code SemiBold" Header="Отображение таблиц">
                                    <RadioButton Content="Список заказов" Command="{x:Bind ViewModel.RadionButtonTableOrderCommand, Mode=OneWay}" CommandParameter="{x:Bind OrderMainTable, Mode=OneWay}"/>
                                    <RadioButton Content="Список чеков" Command="{x:Bind ViewModel.RadionButtonTableCheckCommand, Mode=OneWay}" CommandParameter="{x:Bind CheckMainTable, Mode=OneWay}"/>
                                </muxc:RadioButtons>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right" Spacing="5" Padding="3">
                            <TextBox FontFamily="Cascadia Code SemiBold" Header="Введите номер заказа" Visibility="{x:Bind ViewModel.VisibilityTextBoxidOrderEditAndDelete, Mode=TwoWay}" Text="{x:Bind ViewModel.TextBoxTextidOrderEditAndDelete, Mode=TwoWay}"/>
                            <CheckBox Content="Объеденить в один чек" FontFamily="Cascadia Code SemiBold" Visibility="{x:Bind ViewModel.VisibilityCheckBoxUniteCheck, Mode=TwoWay}" IsChecked="{x:Bind ViewModel.IsCheckedCheckBoxUniteCheck, Mode=TwoWay}" Command="{x:Bind ViewModel.IsVisibleCheckBoxUniteCheckCommand, Mode=TwoWay}"/>
                            <Button Content="{x:Bind ViewModel.ContentSaveButtonCommandBar, Mode=TwoWay}" Visibility="{x:Bind ViewModel.VisibilitySaveButtonCommandBar, Mode=TwoWay}" Command="{ x:Bind ViewModel.AppBarButtonSaveButton, Mode=TwoWay}" HorizontalAlignment="Right"/>
                            <muxc:TeachingTip
                                Title="Таблица для изменения"
                                Subtitle ="Выберете таблицу для изменения какого-то чека, либо заказа"
                                PreferredPlacement="Auto"
	                            PlacementMargin="20"
                                IsLightDismissEnabled="True"
                                ActionButtonContent="Таблица заказы"
                                ActionButtonCommand="{x:Bind ViewModel.OpenTableOrderSettingsCommand, Mode=OneWay}"
	                            CloseButtonContent="Таблица чек"
                                CloseButtonCommand="{x:Bind ViewModel.OpenTableCheckSettingsCommand, Mode=OneWay}"
                                CloseButtonCommandParameter="{x:Bind CheckSettingsTable, Mode=OneWay}"
                                IsOpen="{x:Bind ViewModel.IsOpenTeachingTipEdit, Mode=TwoWay}"/>


                        </StackPanel>

                        <controls:DataGrid
                            Grid.Row="2"
                            Height="200"
                            x:Name="OrderSettingsTable"
                            AutoGenerateColumns="False"
                            Visibility="Collapsed"
                            HorizontalAlignment="Left"
                            GridLinesVisibility="All"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Visible"
                            ItemsSource="{x:Bind ViewModel.OrderCollectionSettings, Mode=OneWay}"
                            IsReadOnly="False">

                            <controls:DataGrid.Columns>
                                <controls:DataGridComboBoxColumn Header="Номер товара" IsReadOnly="False" Binding="{Binding idProduct}"  Width="Auto" FontFamily="Cascadia Code SemiBold" ItemsSource="{x:Bind ViewModel.AllidProductCollection}"/>
                                <controls:DataGridComboBoxColumn Header="Номер пользователя" IsReadOnly="False" Binding="{Binding idUser}" Width="Auto" FontFamily="Cascadia Code SemiBold" ItemsSource="{x:Bind ViewModel.AllidUserCollection}"/>
                                <controls:DataGridTextColumn Header="Количество" IsReadOnly="False" Binding="{Binding Quantity}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                                <controls:DataGridTextColumn Header="Цена" IsReadOnly="False" Binding="{Binding Price}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                                <controls:DataGridTextColumn Header="Процент скидки" IsReadOnly="False" Binding="{Binding Discount}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                                <controls:DataGridTextColumn Header="Статус" IsReadOnly="False" Binding="{Binding Status}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                                <controls:DataGridComboBoxColumn Header="Номер чека" IsReadOnly="False" Binding="{Binding idCheck}" Width="Auto" FontFamily="Cascadia Code SemiBold" ItemsSource="{x:Bind ViewModel.AllidCheckCollection}"/>
                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </Grid>

                    <controls:DataGrid
                            Grid.Row="2"
                            Visibility="Visible"
                            x:Name="CheckSettingsTable"
                            AutoGenerateColumns="False"
                            HorizontalAlignment="Left"
                            GridLinesVisibility="All"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Visible"
                            ItemsSource="{x:Bind ViewModel.CheckCollectionSettings, Mode=OneWay}"
                            IsReadOnly="False">

                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn Header="Дата создания чека" IsReadOnly="False" Binding="{Binding Data}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Сумма покупок" IsReadOnly="False" Binding="{Binding Sum}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>

                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                    <controls:DataGrid Grid.Row="0" Grid.Column="0"
                            Height="690"
                            x:Name="CheckMainTable"
                            AutoGenerateColumns="False"
                            GridLinesVisibility="All"
                            VerticalScrollBarVisibility="Visible"
                            ItemsSource="{x:Bind ViewModel.CheckCollection, Mode=OneWay}"
                            IsReadOnly="True"
                            HorizontalAlignment="Left"
                            Visibility="Collapsed">

                        <controls:DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                            
                            </DataTemplate>
                        </controls:DataGrid.RowDetailsTemplate>

                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn Header="Номер чека" IsReadOnly="False" Binding="{Binding idCheck}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Дата" IsReadOnly="False" Binding="{Binding Data}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Сумма покупки" IsReadOnly="False" Binding="{Binding Sum}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                    <controls:DataGrid Grid.Row="0" Grid.Column="0"
                            Height="690"
                            x:Name="OrderMainTable"
                            AutoGenerateColumns="False"
                            HorizontalAlignment="Left"
                            GridLinesVisibility="All"
                            VerticalScrollBarVisibility="Visible"
                            ItemsSource="{x:Bind ViewModel.OrderUPGRADECollection, Mode=OneWay}"
                            IsReadOnly="True"
                            Visibility="Collapsed">

                        <controls:DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Padding="10" Spacing="10">
                                        <StackPanel Padding="10" Spacing="5">
                                            <TextBlock Text="Номер товара:" FontFamily="Cascadia Code SemiBold"/>
                                            <TextBlock Text="Номер пользователя:" FontFamily="Cascadia Code SemiBold"/>
                                            <TextBlock Text="Заказов под данным номером чека найденно:" FontFamily="Cascadia Code SemiBold"/>
                                            <Button Content="Отобразить заказы" FontFamily="Cascadia Code SemiBold" Padding="10"/>
                                        </StackPanel>
                                        <StackPanel Padding="10" Spacing="5">
                                            <TextBlock Text="{Binding idProduct}" FontFamily="Cascadia Code SemiBold"/>
                                            <TextBlock Text="{Binding idUser}" FontFamily="Cascadia Code SemiBold"/>
                                            <TextBlock Text="" FontFamily="Cascadia Code SemiBold"/>
                                        </StackPanel>
                                    <CommandBar Background="Transparent" DefaultLabelPosition="Right" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                        <AppBarButton Icon="Cancel"  Command="{Binding ElementName=PageRoot, Path=CloseDetailVisible}"/>
                                    </CommandBar>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGrid.RowDetailsTemplate>

                        <controls:DataGrid.Columns>
                            <controls:DataGridComboBoxColumn Header="Номер заказа" IsReadOnly="False" Binding="{Binding idOrder}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Название товара" IsReadOnly="False" Binding="{Binding NameProduct}"  Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Логин пользователя" IsReadOnly="False" Binding="{Binding LoginUser}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Количество" IsReadOnly="False" Binding="{Binding Quantity}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Цена" IsReadOnly="False" Binding="{Binding Price}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Процент скидки" IsReadOnly="False" Binding="{Binding Discount}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Статус" IsReadOnly="False" Binding="{Binding Status}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                            <controls:DataGridTextColumn Header="Номер чека" IsReadOnly="False" Binding="{Binding idCheck}" Width="Auto" FontFamily="Cascadia Code SemiBold"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>
                <muxc:TabViewItem.IconSource>
                    <muxc:SymbolIconSource Symbol="Manage" />
                </muxc:TabViewItem.IconSource>
            </muxc:TabViewItem>
            <muxc:TabViewItem Header="Персонал" FontFamily="Cascadia Code SemiBold">
                <muxc:SymbolIconSource Symbol="OtherUser" />
            </muxc:TabViewItem>
        </muxc:TabView>
    </Grid>
</Page>
